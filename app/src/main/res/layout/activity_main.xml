<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="sg.edu.rp.webservices.pd4.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcomeHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Welcome!"
            android:textSize="40dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/img_me" />

        <TextView
            android:id="@+id/aboutMeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Me"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/aboutMeDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am Currently studying in Republic Polytechnic's Diploma in Mobile Software development. I love hotography, Reading and Writing, Design and quite a number which are related to the arts. I do freelance photography occasionally so feel free to contact me if you are interested.\n"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/divider"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\nMy Portfolios\n"
            android:id="@+id/headerPD"
            android:textSize="30dp"/>
        <FrameLayout
            android:paddingTop="5dp"
            android:background="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:background="#fff"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/bryan_product_edited"
                android:id="@+id/img_photo_pd"
                android:scaleType="centerCrop"/>

            <TextView
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:textSize="25dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photography"
                android:id="@+id/header_photo"/>

        </FrameLayout>
        <FrameLayout
            android:paddingTop="5dp"
            android:background="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:background="#fff"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/pd_link_btn"
                android:id="@+id/img_prog_pd"/>

            <TextView
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="25dp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programming"
                android:id="@+id/header_prog"/>

        </FrameLayout>

    </LinearLayout>

</ScrollView>
